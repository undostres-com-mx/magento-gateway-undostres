<?xml version="1.0"?>
<!--/* CONFIGURACION DEL PLUGIN */-->
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <payment>
            <undostres_gateway>
                <model>PaymentGatewayFacade</model>
                <title>UnDosTres</title>
                <payment_action>initialize</payment_action> <!--Important: read Magento\Sales\Model\Order-->
                <active>1</active>
                <is_gateway>1</is_gateway>
                <description>Paga desde la App de UnDosTres selecionando tu m√©todo preferido</description>
                <api_key backend_model="Magento\Config\Model\Config\Backend\Encrypted" />
                <gateway_url></gateway_url>
                <specificcountry>MX</specificcountry>
                <can_initialize>1</can_initialize> <!--Important: read Magento\Sales\Model\Order-->
                <can_use_checkout>1</can_use_checkout>
                <can_authorize>0</can_authorize>
                <can_capture>0</can_capture>
                <can_capture_partial>1</can_capture_partial>
                <can_authorize_vault>0</can_authorize_vault>
                <can_capture_vault>1</can_capture_vault>
                <can_use_internal>0</can_use_internal>
                <can_refund_partial_per_invoice>1</can_refund_partial_per_invoice>
                <can_refund>1</can_refund>
                <can_void>0</can_void>
                <can_cancel>0</can_cancel>
                <can_edit>0</can_edit>
                <can_review_payment>1</can_review_payment>
                <can_deny_payment>1</can_deny_payment>
            </undostres_gateway>
        </payment>
    </default>
</config>
